<script type="text/javascript">
	$(".menu_right_js").click(function () {
		$("body").height($(window).height())
		$(".mask").show();
		$(".siderMenu").css({ "right": "0" });
		$(this).addClass("show_menu");
	});

	r();
	$(window).on('resize', r)
	function r() {
		window.innerHeight > $(".siderMenuBody").height() ? $(".siderMenu").addClass('sticky') : $(".siderMenu").removeClass('sticky')
	}
	$(".siderMenu").on('touchmove', function (e) {
		e.stopPropagation()
		e.stopImmediatePropagation()
	})

	$(".close").click(function () {
		$(".mask").hide();
		$(".siderMenu").css({ "right": "-11.4rem" });
		$(this).removeClass("show_menu");
		$('body').css('height', '');
	});

	$("#status").parent().attr("onclick", "location.href='http://login.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHYS11&tourl=" + location.href + "'");
	$('.avatarBox').children().attr("onclick", "location.href='http://login.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHYS11&tourl=" + location.href + "'");
	//加载页面后发送交易查询是否登陆
	$.ajax({
		type: "post",
		cache: false,
		url: "http://www.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHY000&jsoncallback=?",
		dataType: "jsonp",
		success: function (data) {
			var output = data;
			var loginStatus = output.loginStatus;
			var locat = top.location.href;
			if (loginStatus == 0) {           //处于登陆状态;
				$("#status").text("我的");
				var name = output.showName;
				$("#showName").text(name);
				$("#status").parent().attr("onclick", "location.href='http://m.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHYY00'");
				var name = output.showName;
				var images = '/cn/mobilev3/v3/images/tx_01.png';
				var time = output.lastLoginTime;

				var loginHtml = '<div class="clear_over">\
									<div class="m_fl img_box" onclick="location.href=\'http://m.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHYY00\'">\
										<img src="http://member.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=D20020" alt="" style="-webkit-border-radius: 50%;">\
									</div>\
									<div class="m_fl btn_exit">\
										<h3 title="'+ name + '">' + name + '</h3>\
										<a href="javascript:out();">安全退出</a>\
									</div>\
								</div>';
				$('.avatarBox').html(loginHtml);
			}
		},
		error: function () {

		}
	}).done(function () {
		var cookie = $.cookie("mobileLoginShow");
		if (cookie) {
			$(".personInforPop").fadeIn();
			setTimeout(function () {
				$(".personInforPop").fadeOut();
			}, 2000)
			$.cookie("mobileLoginShow", "second", { expires: -1, path: "/", domain: "ccb.com", secure: false })
		}
	});
	function out() {
		$.ajax({
			type: "post",
			cache: false,
			url: "/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHY001&jsoncallback=?",
			dataType: "jsonp",
			success: function (data) {

				if (typeof mustNeedLogin != "undefined" && mustNeedLogin == true) {
					top.location.href = "http://login.ccb.com/tran/WCCMainPlatV5?CCB_IBSVersion=V5&SERVLET_NAME=WCCMainPlatV5&TXCODE=NHY010&tourl=http://life.ccb.com/cn/home/indexv3.html";
				} else {
					location.reload();
				}
			}
		});
	}

</script>


<script>
	!function () {
		var now = new Date, startTime = toDate('2017-11-16'), endTime = toDate('2018-11-22'), valid = now > startTime && now < endTime;
		if (valid) {
			var keyword = '龙支付', placeholder='乐享龙支付 最高满减40';
			$('.head_search span').text(placeholder);
			$(function () {
				var event=toolkit.Event();
				event.listen('search_loaded',function () {
					$("#search_input").attr({ 'placeholder': placeholder, 'def_search': keyword })
				})
			})
		}
		function toDate(str){
			var match=str.match(/(\d{4})-(\d{2})-(\d{2})/), d=null;
			if(match){
				d=new Date();
				d.setFullYear(match[1]),d.setMonth(match[2]-1),d.setDate(match[3]);
			}
			return d;
		}
	}()
</script>



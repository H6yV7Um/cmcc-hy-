<script type="text/javascript">

    function openAlert(url) {

        layer.open({
            type: 2,
            content: url,
            title: false,
            shadeClose: true,
            shade: 0.5, //不显示遮罩
            success: function (layero, index) {
                layer.iframeAuto(index);
            }
        });


    }
    layui.use('layer', function () {
        $('.btnBM').on('click', function () {
            openAlert('/apply.aspx');
        });
        $('.owl-carousel dd').on('click', function () {
            var id = $(this).attr("id");
            openAlert('http://www.abiechina.com/video.aspx?id=' + id + '');
        });
        $('.video_con img').on('click', function () {
            var id = $(this).attr("id");
            openAlert('http://www.abiechina.com/video.aspx?id=' + id + '');
        });
        //全局使用。即所有弹出层都默认采用，但是单个配置skin的优先级更高
        layer.config({
            skin: 'tel_main'
        })
    });

</script>

<script type="text/javascript">
    layui.use(['form'], function () {
        var form = layui.form(), layer = layui.layer;
        //监听提交
        form.on('submit(nowbtn)', function (data) {
            $.ajax({
                url: $("#check_url").val(),
                type: "POST",
                data: $('#yuyueform').serialize(),
                cache: false,
                async: false,
                success: function (data) {
                    if (data == "success") {
                        layer.alert('预约免费试听成功，<br />我们会尽快与您取得联系！', {
                            title: '成功提示',
                            btn: '关闭',
                            closeBtn: 0,
                            shade: 0.5,
                            icon: 1,
                            scrollbar: false,
                            yes: function () {
                                parent.layer.closeAll();
                            }
                        });
                        $('#yuyueform')[0].reset();
                    } else {
                        layer.alert("提交失败，请重新提交!", { title: '失败提示', btn: '关闭', shade: 0.5, time: 3000, icon: 2, scrollbar: false });
                    }

                }
            });
        });
    });
</script>



       //mouseenter
      
	$(".nav li").mouseenter(function() {
              
		var _this =$(this);
		menu =setTimeout(function () { 
			_this.addClass("on").siblings().removeClass("on");
			_this.children(".yxj_jyxfw").slideDown();
		},0);
         });
 


         // mouseleave
	 $(".nav li").mouseleave(function() {
              
		$(this).children(".yxj_jyxfw").hide();		
		$(this).removeClass("on");
		window.clearTimeout(menu);
    });
    $("#yxj_tab1 li").hover(function() {
        $(this).addClass("on2").siblings().removeClass("on2");
		$(".yxj_c1").eq($(this).index()).show().siblings(".yxj_c1").hide();
    });
	$("#yxj_tab2 li").hover(function() {
        $(this).addClass("on2").siblings().removeClass("on2");
		$(".yxj_c2").eq($(this).index()).show().siblings(".yxj_c2").hide();
    });
});

<script>




$(function(){

       
var html,src,subtitle,href,docpeople;
var htmldoc="";
$.ajax({
     type: "POST",     
     url: "index_feature1.json",     
     dataType: "json",
     contentType: "application/json;charset=utf-8",
     success:function(data){
        //专题随机显示开始

       for(var chnl in data){
           if(chnl!="ends"){
               var lens=data[chnl].length-1;
               var i=Math.floor(Math.random()*lens);
               href=data[chnl][i].HREF;
               subtitle=data[chnl][i].SUBTITLE;
               if(subtitle==""||subtitle=="0"||subtitle=="0px"){
                 subtitle="30px";
               }
              
               src=data[chnl][i].IMG;
               docpeople=data[chnl][i].DOCPEOPLE;
               if(docpeople=="" ||docpeople=="0"||docpeople=="0px"){
                 docpeople="-465px";
               }
if(href=="#"){
               htmldoc+=" <li lb_top="+docpeople+" lb_right="+subtitle+" rel="+href+" style='background-image: url("+src+");background-position: center;'></li>";  
}else{
               htmldoc+=" <a href="+href+" target='_blank'><li lb_top="+docpeople+" lb_right="+subtitle+" rel="+href+" style='background-image: url("+src+");background-position: center;'></li></a>";  
}
 
           }
                 
        }
       $(".ul").html(htmldoc);

               
        //专题随机显示结束
     


       //设置轮播开始
         
        var width_=$(window).width();
  	$('.main2_sy .ul li').css('width',width_);
	$('.main2_sy .ul li a img').css('width',width_);
          $('.main2_sy').css('width',width_);
         var height=$('.main2_sy').height();
         //$('.main2_sy').css('height',"");
	//$('.main2_sy .ul').css('height',height);
	$('.main2_sy .ul li a img').css('height',height);
          var index = 1;
	var timer = null;
	var $pipe = $( ".main2_sy .ul" );
	var $view=$('.main2_sy');
          var $firstPipeItem = $( ".main2_sy .ul li" ).first();


        
	$(".lbt_detail a").attr("href",$(".main2_sy li").first().attr("rel"));//给刚加载完后的第一个专题的了解更多赋值

	var $lastPipeItem = $( ".main2_sy .ul li" ).last();        	
	$firstPipeItem.clone( true ).appendTo( $pipe );
	$lastPipeItem.clone( true ).prependTo( $pipe );
          var imgWidth = width_;
          var $pipeItem = $(".main2_sy .ul li");
	$pipe.width( $pipeItem.length * imgWidth );
        
        $(".lbt_detail").css({
top:$(".main2_sy li").eq(1).attr("lb_top"),
right:$(".main2_sy li").eq(1).attr("lb_right")
});

	function slide(i){
$(".lbt_detail a").attr("href",$(".main2_sy li").eq(i).attr("rel"));
$(".lbt_detail").css({
top:$(".main2_sy li").eq(i).attr("lb_top"),
right:$(".main2_sy li").eq(i).attr("lb_right")
})
		$pipe.animate( {left: -i * imgWidth}, 200, function(){
			if( i == 0 ){
				$pipe.css( "left", ( $pipeItem.length - 2 ) * -imgWidth );
				index = $pipeItem.length - 2;
			}else if( i == $pipeItem.length - 1 ){
				$pipe.css( "left", -imgWidth );
				index = 1;
			}
		});
	}
          $view.on( "mouseover", function(){
		clearInterval( timer );
	})
	.on("mouseout", function(){
		setTimer();
	});

	$( ".prev" ).on( "click", function(){
	    if(!$pipe.is( ":animated" ) ){                  
		--index;
                slide(index);		
		}
	});

	$( ".next" ).on( "click", function(){
	    if(!$pipe.is( ":animated" ) ){
                        ++index; 
                      slide(index);        
		} 
	});

	function setTimer(){
		timer = setInterval( function(){
			$( ".next" ).trigger( "click" );
		}, 4000 );
	}

	setTimer();

var rt;   
  $(window).resize(function(){  


        
          width_=$(window).width();
          if(width_<1140){
             imgWidth = 1140;
             width_ = 1140;
          }else{
             imgWidth = width_;
          }


	$('.main2_sy .ul li a img').css('width',width_);
	$('.main2_sy').css('width',width_);
	$('.main2_sy .ul li').css('width',width_);
	//height=$('.main2_sy .ul li a img').height();
         //$('.main2_sy').css('height',height);
         if( index === 0 ){
	     $pipe.css( "left", ( $pipeItem.length - 2 ) * -imgWidth );
         }else if( index === $pipeItem.length - 1 ){
              $pipe.css( "left", -imgWidth );							
         }else{         
              $pipe.css( "left", -index * imgWidth);}








            

});


  var _block;
       $('.main3_1').mouseover(function(){
               var _this=$(this);
               window.clearTimeout(_block);
               _block=setTimeout(function(){
                _this.hide();
		var b_div=_this.next();
		b_div.show();
		b_div.animate({'width':'676px','height':'230px','marginTop':'0px'},0);
                        b_div.siblings(".main3_2").hide();
                        b_div.siblings(".main3_2").css({width:'80px',height:'50px',marginTop:'181px'});
			b_div.siblings(".main3_2").prev(".main3_1").show();
               
	       
		
		},100);
	  

	})
	$('.main3_2t ul li').mouseover(function(){
		$(this).addClass('select').siblings().removeClass('select');
		var i=$(this).index();
		$(this).parents('.main3_2t').siblings('.main3_2m').eq(i).show().siblings('.main3_2m').hide();;
	})

        $(window).scroll( function() {
		var scrollValue=$(window).scrollTop();
		scrollValue > 100 ? $('div[class=fixed]').fadeIn():$('div[class=fixed]').fadeOut();
	});
	$('.reture').click(function(){
		$("html,body").animate({scrollTop:0},200);
		return false;
	});

     //设置轮播结束
           

       
     },
     error:function(XMLHttpRequest, textStatus, errorThrown){
        alert(errorThrown);
     }

  });

});




 

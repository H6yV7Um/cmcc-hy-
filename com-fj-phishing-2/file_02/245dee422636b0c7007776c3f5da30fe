<script>

    function getNumb(list_l,count){
        var num = new Array();
        for(var i = 0; i < count; i++){
            var val =  Math.ceil(Math.random()* list_l);
            var isEqu = false;
            for(var idx in num){
                if(num[idx] == val-1){isEqu = true; break;}
            }
            if(isEqu)
                i--;
            else
                num[num.length] = val-1;
        }
        return num;
    }

var xxyw= new Array();
var czyw= new Array();
var xxdf= new Array();
var czdf= new Array();
var czls= new Array();

var html ='';
var title,href,dq,title_sub,docretime,img;


	$.ajax({     
		type: "POST",     
		url: "hp_jyx.json",     
		dataType: "json",
		contentType: "application/json; charset=utf-8",     
		success: function (data) {
				//小学语文
				xxyw= getNumb(data.xxyw.length,1);
				dq = xxyw[0];
				href = data.xxyw[dq].HREF;
				title = data.xxyw[dq].TITLE;
				title_sub = data.xxyw[dq].TITLE_SUB;
				docretime = data.xxyw[dq].DOCRELTIME;
				img = data.xxyw[dq].IMG;
				$("<li><a href='"+href+"' target='_blank' class='a1' title='"+title+"'>"+title_sub+"</a></li>").appendTo("#jys_list");
				$("<a href='"+href+"' title='"+title+" target='_blank'><img src='"+img+"' /></a>").appendTo("#jys_sp");


				czyw= getNumb(data.czyw.length,1);
				dq = czyw[0];
				href = data.czyw[dq].HREF;
				title = data.czyw[dq].TITLE;
				title_sub = data.czyw[dq].TITLE_SUB;
				docretime = data.czyw[dq].DOCRELTIME;
				$("<li><a href='"+href+"' target='_blank' title='"+title+"'>"+title_sub+"</a></li>").appendTo("#jys_list");

				xxdf= getNumb(data.xxdf.length,1);
				dq = xxdf[0];
				href = data.xxdf[dq].HREF;
				title = data.xxdf[dq].TITLE;
				title_sub = data.xxdf[dq].TITLE_SUB;
				docretime = data.xxdf[dq].DOCRELTIME;
				$("<li><a href='"+href+"' target='_blank' title='"+title+"'>"+title_sub+"</a></li>").appendTo("#jys_list");


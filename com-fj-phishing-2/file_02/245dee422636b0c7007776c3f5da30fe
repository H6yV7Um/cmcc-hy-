<script type="text/javascript">

    $(document).ready(function(){
        $('.box_nav span:first').addClass('active');   
        $('.sho:first').css('display','block');   
        autoroll();   
        hookThumb();   
    });   
    var i=-1;
    var offset = 2500;
    var timer = null;   
    function autoroll(){   
        n = $('.box_nav span').length-1;   
        i++;   
        if(i > n){   
            i = 0;   
        }   
        slide(i);   
            timer = window.setTimeout(autoroll, offset);   
    }   
    function slide(i){   
        $('.box_nav span').eq(i).addClass('active').siblings().removeClass('active');   
        $('.sho').eq(i).css('display','block').siblings('.sho').css('display','none');   
    }   
    function hookThumb(){       
    $('.box_nav span').hover(   
        function () {  
            if (timer) {   
                clearTimeout(timer);   
                i = $(this).prevAll().length;   
                slide(i);   
                }   
            },   
        function () {         
            timer = window.setTimeout(autoroll, offset);     
            this.blur();               
            return false;   
        }   
        );   
    }  
	
    $('.sho').hover(   
        function () {  
            if (timer) {   
                clearTimeout(timer);   
                slide($(this).eq());   
                }   
            },   
        function () {  
            timer = window.setTimeout(autoroll, offset);     
            this.blur();               
            return false;   
        }   
        );  
	 
</script>
                 </div>                 

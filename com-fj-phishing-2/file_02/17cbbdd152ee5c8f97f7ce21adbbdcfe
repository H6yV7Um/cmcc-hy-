	<script type="text/javascript">
		$(function(){
			var blilen = $("#banner li").length;
			var bindex = 0;
			var interval,timeout,allmovewidth;
			var cntWidth = $("#content").width();
			var touchnext;
			var image = new Image();
			image.onload = function(){
				$("#banner").css({height:$("#banner li").eq(0).height()});
			}
			image.src = $("#banner li").eq(0).find("img")[0].src;
			function changeBannerDash(){
				if (!$("#dashnav ul li").eq(bindex).hasClass("active"))
					$("#dashnav ul li").removeClass("active").eq(bindex).addClass("active");
			}
			changeBannerDash();
			function nextBanner(x){
				x = x | 0;
				if (touchnext) {touchnext.removeAttr("style");};
				$("#banner li").removeClass("a-fore a-after");
				$("#banner li.prev").removeClass("prev");
				$("#banner li").eq(bindex).removeClass().addClass("prev");
				bindex = bindex == (blilen - 1 - x) ? x : (bindex + 1 + x);
				$("#banner li").eq(bindex).addClass("a-after active");
				changeBannerDash();
			}
			function prevBanner(x){
				x = x | 0;
				if (touchnext) {touchnext.removeAttr("style");};
				$("#banner li").removeClass("a-fore a-after");
				$("#banner li.prev").removeClass("prev");
				$("#banner li").eq(bindex).removeClass().addClass("prev");
				bindex = bindex == x ? (blilen-1) : (bindex - 1 - x);
				$("#banner li").eq(bindex).addClass("a-fore active");
				changeBannerDash();
			}
			interval = setInterval(nextBanner,3500);
			var remove = false;
			$("#banner").on({touchstart:function(e){
				var touch = e.originalEvent.targetTouches[0];
				allmovewidth = 0;
				clearInterval(interval);
				nextplace = touch.pageX;
				remove = true;
				$("#dashnav li").removeClass("animate");
			},touchmove:function(e){
				if (remove) {
					$("#banner li").removeAttr("style");
					$("#banner li").removeClass("prev");
					$("#banner li.active").removeClass("active").addClass("prev");
				};
				remove = false;
				var touch = e.originalEvent.targetTouches[0];
				moveplace = touch.pageX;
				allmovewidth += nextplace - moveplace;
				nextplace = moveplace;
				if(allmovewidth < 0){
					touchnext = $("#banner li").eq(bindex == 0 ? (blilen-1) : (bindex - 1));
					touchnext.addClass("active").css("transform","translateX(" + (-cntWidth - allmovewidth) + "px)");
				} else {
					touchnext = $("#banner li").eq(bindex == (blilen-1) ? 0 : (bindex + 1));
					touchnext.addClass("active").css("transform","translateX(" + (cntWidth-allmovewidth) + "px)");
				}
			},
			touchend:function(e){
				$("#dashnav li").addClass("animate");
				if (touchnext) {touchnext.css("transition","all .3s ease-in-out")};
				if(allmovewidth < 0 && Math.abs(allmovewidth) > cntWidth/3){
					touchnext.css({transform:"translateX(0)"});
					$("#banner li").eq(bindex == (blilen-1) ? 0 : (bindex + 1)).removeClass("prev");
					$("#banner li").eq(bindex).removeClass().addClass("prev");
					bindex = bindex == 0 ? (blilen-1) : (bindex - 1);
					changeBannerDash();
				} else if(allmovewidth > 0 && allmovewidth > cntWidth/3){
					touchnext.css({transform:"translateX(0)"});
					$("#banner li").eq(bindex == 0 ? (blilen-1) : (bindex - 1)).removeClass("prev");
					$("#banner li").eq(bindex).removeClass().addClass("prev");
					bindex = bindex == (blilen-1) ? 0 : (bindex + 1);
					changeBannerDash();
				} else {
					function restart(){
						$("#banner li").eq(bindex).removeClass().addClass("active");
						if (touchnext) {touchnext.removeClass("active")};
					}
					if(allmovewidth < 0){
						touchnext.css({transform:"translateX(-" + cntWidth +"px)"});
						restart();
					} else if(allmovewidth > 0) {
						touchnext.css({transform:"translateX(" + cntWidth +"px)"});
						restart();
					}
				}
				interval = setInterval(nextBanner,3500);
			}});
			$("#dashnav li").on("click",function(){
				if ($(this).hasClass("active")) return;
				var index = $(this).index() - $("#dashnav li.active").index();
				if (index < 0) {
					index = Math.abs(index) - 1;
					prevBanner(index);
				} else {
					index = Math.abs(index) - 1;
					nextBanner(index);
				}
			});
			$("#linkList .tab .tabname").on("click",function(e){
				_this = $(this).parent();
				var tnh = _this.find(".tabname").height();
				var sbh = _this.find(".sublist")[0].offsetHeight;
				if (_this.hasClass("active")) {
					_this.removeClass("active");
					_this.css({height:tnh});
				} else {
					_this.addClass("active");
					_this.css({height:tnh + sbh});
				}
			});
		});
	</script>

</body></html>
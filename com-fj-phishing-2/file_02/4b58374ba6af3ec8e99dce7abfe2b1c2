<script type="text/javascript">

	//设置cookie
    function setCookie(c_name,value,expiredays){
        var exdate = new Date();
        exdate.setDate(exdate.getDate()+expiredays);
        document.cookie = c_name+"="+escape(value)+
        ((expiredays==null)?"":";expires="+exdate.toGMTString());
    }
	
	//获取cookie
    function getCookie(c_name){
        if(document.cookie.length>0){
			c_start = document.cookie.indexOf(c_name+"=");
			if(c_start!=-1){ 
				c_start = c_start+c_name.length+1;
				c_end = document.cookie.indexOf(";",c_start);
				if(c_end==-1){
					c_end = document.cookie.length;
				}
				return unescape(document.cookie.substring(c_start,c_end));
			}
		}
        return "";
    }
	
    //存储是否勾选声音的cookie
    function toogle_news_sound_on(){
        if(jQuery("#news-sound-on").prop('checked')){
			//有提示音
            setCookie('news-sound-on',true,3600);
        }else{
			//无提示音
            setCookie('news-sound-on',false,3600);
        }
    }
	
	//存储是否勾选弹窗的cookie
    function toogle_news_notice_on(){
        if(jQuery("#news-notice-on").prop('checked')){
			//有弹窗
            setCookie('news-notice-on',true,3600);
			//设置允许通知
			if(window.Notification){
				Notification.requestPermission();
				popNotice('测试弹窗通知','你见到此消息弹出来，即证明你浏览器支持消息推送','/');
			}
        }else{
			//无弹窗
            setCookie('news-notice-on',false,3600);
        }
    }
	
	//页面加载时执行
    jQuery(document).ready(function(){
        jQuery("#jquery_jplayer_1").jPlayer({
			ready:function(){
				jQuery(this).jPlayer("setMedia",{
					mp3: "/wp-includes/news/msg.mp3"
				});
			},
			swfPath: "/wp-includes/news/jplayer",
			supplied: "mp3"
        });
        if(getCookie('news-sound-once')=='true'){
			//有新更新后,第一次刷新,播放声音
            setCookie('news-sound-once',false,-1);
            setTimeout(function(){
                jQuery("#news-jp-play").trigger("click");
            },1000);
        }
    });
	
	//获取当前最新的新闻id
    var recent_post = 0;
    jQuery.get("/recent_post.id?"+(new Date).getTime(),function(data){
        recent_post = parseInt(data);
    });
	
	//Notification弹窗桌面通知
	if (window.Notification){
		function popNotice(title,cont,url){
			if(Notification.permission == "granted"){
				var notification = new Notification(
					title, 
					{
						body: cont,
						icon: '/wp-content/themes/D8/img/nlogo.png',
						tag: "testTag",
						renotify: 'true'//当前标记的通知只会出现一个。
					}
				);
				notification.onclick = function(){
					window.open(url,"_blank");
					notification.close();    
				};
				//当通知显示的时候被触发 30秒后关闭通知
				notification.onshow = function(){
					setTimeout(function(){
						notification.close();
					},30000);
				}
			}else{
				Notification.requestPermission();//设置允许通知
			}
		};	
	}
	
	
    setInterval(function(){
        jQuery.get("/recent_post.id?"+(new Date).getTime(),function(data){
            if (recent_post==0){
                recent_post = parseInt(data);
            }else{
                if(recent_post<parseInt(data)){
                    if(jQuery("#news-sound-on").prop('checked')){
                        setCookie('news-sound-once',true,1);
                    }
                    recent_post = parseInt(data);
					
					//在这里得到新闻内容
					jQuery.get("/getrecent.php?nid="+recent_post,function(data){
						
						//拼接内容代码
						var content = '<article class="excerpt excerpt-nothumbnail">'+
											'<header>'+
												'<a class="label label-important" href="/?cat='+data["term_id"]+'">'+data["term_name"]+'<i class="label-arrow"></i></a>'+
												'<h2><a href="/?p='+data["id"]+'" title="'+data["title"]+'">'+data["title"]+'</a></h2>'+
											'</header>'+
											'<p>'+
												'<span class="muted"><i class="icon-user icon12"></i><a href="/?author='+data["authorid"]+'">'+data["author"]+'</a></span>'+
												'<span class="muted"><i class="icon-time icon12"></i>'+data["createtime"]+'</span>'+			
											'</p>'+	
											'<div class="note">'+data["content"]+'<p class="plast">【淘财经友情提示：本站资讯仅作题材总结，不做推荐，切勿盲目跟风】</p></div>'+
										'</article>';
						
						//触发play按钮
						jQuery("#news-jp-play").trigger("click");
						
						//追加内容
						$('#cstart').after(content);
						
						if(data['excerpt']!='' && data['excerpt']!=null){
							$('#showexcerpt-a').attr('href','/?p='+data['id']);
							$('#showexcerpt').html(data['excerpt']);
						}
						
						//执行弹窗通知
						popNotice(data["title"],data["content_y"],'/?p='+data["id"]);
						
						//追加关键字
						var pop = '<span class="guanjianzi">'+data["keyword"]+'</span>';
						$('#guanjianzibox').append(pop);
						
						//定时删除关键字提示
						setTimeout("$('.guanjianzi').remove()",30000);
					});
                }
            }
        });
    },10000);
</script><div id="cstart" style="display:none;"></div><article class="excerpt excerpt-nothumbnail">
